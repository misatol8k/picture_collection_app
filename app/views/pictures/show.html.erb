<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @picture.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @picture.content %>
</p>
<% unless @picture.image.blank? %>
<p>
  <strong>Image:</strong>
  <%= image_tag @picture.image.url %>
</p>
<% end %>
<p>
  <strong>User:</strong>
  <%= @picture.user.name %>
</p>

<%= link_to '編集する', edit_picture_path(@picture) %> |
